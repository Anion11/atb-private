mixin investment-insurance-programs(mods)
  -
    const baseName = 'investment-insurance-programs'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  -
    const investmentInsurancePrograms = [
      {
        title: 'ООО «АльфаСтрахование-Жизнь»',
        content: [
          {
            prop: 'Страхователь',
            val: 'Физ. Лицо',
          },
          {
            prop: 'срок страхования',
            val: '3, 4, 5 лет',
          },
          {
            prop: 'мин. страховой взнос',
            val: '30 000 руб.',
          },
          {
            prop: 'валюта',
            val: 'рубли',
          },
        ]
      },
      {
        title: 'ООО «МАКС-Жизнь»',
