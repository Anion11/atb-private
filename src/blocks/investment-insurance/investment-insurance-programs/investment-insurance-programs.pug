              .investment-insurance-programs__top !{item.title}
              .investment-insurance-programs__bot
                each row in item.content
                  .investment-insurance-programs__row
                    .investment-insurance-programs__prop !{row.prop}
                    .investment-insurance-programs__val !{row.val}
