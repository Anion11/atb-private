mixin cumulative-insurance-features(mods)
  -
    const baseName = 'cumulative-insurance-features'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  -
    const cumulativeInsuranceFeatures =[
      { img: 'shield', text: '4 степени защиты: <br>финансовая, юридическая, <br>налоговая и страховая.' },
      { img: 'graphic', text: 'Потенциально <br>неограниченный доход' },
      { img: 'family', text: 'Застраховать можно себя <br>или близкого человека, <br>в том числе ребенка' },
      { img: 'wallet', text: 'Забота о будущем <br>и реализация крупных <br>финансовых целей' },
    ]

  .cumulative-insurance-features(class=allMods)&attributes(attributes)
    each item in cumulativeInsuranceFeatures
      .cumulative-insurance-features__item
        .cumulative-insurance-features__img
          img(src=`img/${item.img}.png`, alt='')
        .cumulative-insurance-features__text !{item.text}
    block
