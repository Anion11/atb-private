mixin credit-services(creditServices, mods)
  -
    const baseName = 'credit-services'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .credit-services(class=allMods)&attributes(attributes)
    each item, index in creditServices
      .credit-services__item
        .credit-services__text
          .credit-services__name !{item.name}
          +ui-p1('')
            +ui-ul(item.list, 'credit-services')
        .credit-services__img
          img(src=`img/credit_services_${index}.png` alt='')
    block
