mixin transfer-nav(mods)
  -
    const baseName = 'transfer-nav'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  -
    const transferNav =[
      { img: 'bank-preview.svg', text: ' Переводы по реквизитам в отделениях банка' },
      { img: 'golden_crown-preview.png', text: 'Золотая Корона' },
      { img: 'contact-preview.png', text: 'CONTACT' },
    ]

  .transfer-nav(class=allMods)&attributes(attributes)
    each item in transferNav
      a.transfer-nav__block(href='#')
        .transfer-nav__img
          img(src=`img/${item.img}` alt='')
        .transfer-nav__info
          .transfer-nav__txt=item.text
          +ui-button('Подробнее', '--link-next').text-orange

    block
