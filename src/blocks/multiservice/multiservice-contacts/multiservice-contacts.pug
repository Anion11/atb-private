mixin multiservice-contacts(mods)
  -
    const baseName = 'multiservice-contacts'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  -
    const multiserviceContacts =[
      {
        title: 'Сервисы «Юрист 24» и «Мультисервис»',
        list: [
          { text: 'Позвоните по многоканальному номеру<br><a class="text-orange" href="tel:88005559766">8-800-555-97-66</a>' },
          { text: 'Воспользуйтесь мобильным <br>приложением ЕЮС на платформе IOS и Android', mobile: true },
          { text: 'Задайте вопрос специалистам службы в личном кабинете на сайте <a class="text-link-underline text-orange" href="https://юрист24.онлайн/" target="_blank">юрист24.онлайн</a>' },
        ]
      },
      {
        title: 'Сервис «Налогия»',
        list: [
          { text: 'Позвоните по многоканальному номеру<br><a class="text-orange" href="tel:88007757585">8-800-775-75-85</a>' },
          { text: 'Воспользуйтесь мобильным <br>приложением Налогия на платформе IOS и Android', mobile: true },
