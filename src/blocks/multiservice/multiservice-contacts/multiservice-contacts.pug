      },
    ]

  .multiservice-contacts(class=allMods)&attributes(attributes)
    each item in multiserviceContacts
      .multiservice-contacts__box
        .multiservice-contacts__box-title !{item.title}
        ul.multiservice-contacts__box-list
          each itemLi in item.list
            li !{itemLi.text}
              if itemLi.mobile === true
                .multiservice-contacts__box-mobile
                  .multiservice-contacts__box-mobile-item.bvi-no-styles
                    a.text-orange(target='_blank' href='https://apps.apple.com/ru/app/%D0%B5%D1%8E%D1%81/id1434424801')
                      img(src='img/apps.apple.svg' alt='')
                  .multiservice-contacts__box-mobile-item.bvi-no-styles
                    a.text-orange(target='_blank' href='https://play.google.com/store/apps/details?id=com.els&hl=ru')
                      img(src='img/play.google.svg' alt='')

    block
