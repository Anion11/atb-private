mixin events(eventsItems, mods)
  -
    const baseName = 'events'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .events(class=allMods)&attributes(attributes)
    each item in eventsItems
      .events__item(class=(item.mods && `events__item--${item.mods}`))
        .events__head
          .events__info
            .events__date
              span.events__day 26
              span.events__m-y мая 2023
            +ui-p1('В 18:45 / Благовещенск', 'events')
          if item.img
            .events__img
              img(src=`img/${item.img}`, alt='')
        .events__content
          +ui-h4('Название мероприятия по финансовой грамотности', 'events, --bold')
          +ui-p2('Карткое описание мероприятия в одну или несколько строк')
    block
