mixin installment-ban(mods)
  -
    const baseName = 'installment-ban'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .installment-ban(class=allMods)&attributes(attributes)
    h2.installment-ban__title Оформить АТБ Рассрочку
    .installment-ban__foot
      +ui-button('Установите приложение', 'installment-ban, --white, --icon-apps')(href='#')
      +ui-button('Скачать файл для Android', 'installment-ban, --icon-download')(href='#')
      .installment-ban__apps
        a.installment-ban__app(href='https://apps.apple.com/app/%D0%B0%D1%82%D0%B1-%D1%80%D0%B0%D1%81%D1%81%D1%80%D0%BE%D1%87%D0%BA%D0%B0/id1604332202' target='_blank')
          img(src='img/banner_app-store.svg', alt='')
        a.installment-ban__app(href='https://play.google.com/store/apps/details?id=su.atb.mobileapp' target='_blank')
          img(src='img/banner_google-play.svg', alt='')
    .installment-ban__img
      img(src='img/installment-ban.png' alt='')
    .installment-ban__qr
      img(src='img/installment-ban_qr.jpg' alt='')
    block
