mixin breeding-links(breedingLinks, mods)
  -
    const baseName = 'breeding-links'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .breeding-links(class=allMods)&attributes(attributes)
    each item in breedingLinks
      a.breeding-links__item(href='#')
        .breeding-links__content
          .breeding-links__top
            .breeding-links__icon
              img(src=item.icon, alt='')
            .breeding-links__title !{item.title}
          .breeding-links__descr !{item.descr}
          +ui-button('подробнее', 'breeding-links, --link-next')
    block
