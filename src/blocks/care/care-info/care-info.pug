mixin care-info(data, mods)
  -
    const baseName = 'care-info'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .care-info(class=allMods)&attributes(attributes)
    each item in data
      .care-info__item
        .care-info__icon
          img(src=item.icon alt='')
        .care-info__text
          .care-info__title !{item.title}
          if item.descr
            .care-info__descr !{item.descr}
    block

mixin care-info__item
  .care-info__item&attributes(attributes)
    block

mixin care-info__descr(text)
  .care-info__descr&attributes(attributes) !{text}
    block
