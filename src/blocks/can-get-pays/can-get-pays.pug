mixin can-get-pays(mods)
  -
    const baseName = 'can-get-pays'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .can-get-pays(class=allMods)&attributes(attributes)
    .can-get-pays__box.can-get-pays__box--family
      .can-get-pays__box-content
        .can-get-pays__box-title Семьи с детьми до 3 лет
        .can-get-pays__box-desc рожденными в период с 01 апреля 2017 по&nbsp;30&nbsp;июня&nbsp;2020&nbsp;года включительно – имеют право на
          <b> ежемесячную выплату в  размере 5 000 ₽</b> за апрель-июнь 2020 на каждого такого ребенка. Заявление необходимо подать до 01.10.2020 года.
        .can-get-pays__box-btn
          +ui-button('Оформить')(href='https://www.gosuslugi.ru/help/news/2020_04_11_5000_children' target='_blank')
      .can-get-pays__box-img
        img(src='img/mother.png' alt='')
    .can-get-pays__box
      .can-get-pays__box-content
        .can-get-pays__box-title Семьи с детьми от 3 до 16 лет
        .can-get-pays__box-desc рожденными в период с 11 мая 2004 по&nbsp;30&nbsp;июня&nbsp;2017&nbsp;года включительно – имеют право на
          <b>  единовременную выплату в  размере 10 000 ₽</b> на каждого такого ребенка.
        .can-get-pays__box-btn
          +ui-button('Оформить')(href='https://www.gosuslugi.ru/help/news/2020_06_02_posobie16' target='_blank')
      .can-get-pays__box-img
        img(src='img/children.png' alt='')
    block
