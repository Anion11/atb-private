extends ../../layouts/layout

block styles
  link(rel='stylesheet' href='../../styles/style.min.css')
  link(rel='stylesheet' href=fileName + '.min.css')

block scripts
  script(src='../../js/index.js')

block variables
  -const fileName = 'transfer-inner'
  -const pageTitle ='Золотая Корона'

  -
    const transferInnerData = {
      img: 'img/golden-crown.png',
      rightText: '«Золотая Корона» – сервис быстрых денежных переводов без открытия счета, который предоставляет услуги на территории России, в странах СНГ, Евросоюза и ряде других стран. Процедура оформления перевода, как правило, занимает минуты.'
    }

  -
    const list =[
      { text: 'Широкая сеть обслуживания: более 50 тыс. пунктов в 50 странах Европы и Азии. Участниками и партнерами сервиса являются свыше 450 банков, почтовые операторы и крупные торговые сети.' },
      { text: 'Безадресные переводы. При отправке денег достаточно указать только страну и населенный пункт, куда вы отправляете перевод, а получатель сам выбирает наиболее удобный для него пункт выдачи.' },
      { text: 'Привлекательные тарифы от 0 %. Предложение действует при условии конвертации валюты по курсу оператора сервиса РНКО «Платежный Центр» (ООО), на тот момент, когда осуществляется отправка. При оформлении перевода в банке выберите валюту получения, удобную для получателя (доллары США, евро или одну из национальных валют), оплачивайте перевод в рублях, и при конвертации валюты по курсу РНКО «Платежный Центр» (ООО) комиссия составит 0%.' },
    ]

block content
  main
    +breadcrumbs()
      +breadcrumbs-item('Главная', '/')
      +breadcrumbs-item('Переводы ', '#')
      +breadcrumbs-item(pageTitle)
    .page-content
      +section('--mt0')
        .inner
          +section-head
            +ui-h2('Золотая Корона', 'section-head')
          +transfer-inner(transferInnerData)
            +ui-p1('', '--light')
              p
                b Преимущества сервиса:
              +ui-ul(list)
