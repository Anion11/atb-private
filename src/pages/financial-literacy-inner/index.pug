extends ../../layouts/layout

block styles
  link(rel='stylesheet' href='../../styles/style.min.css')
  link(rel='stylesheet' href=fileName + '.min.css')

block scripts
  script(src='../../js/index.js')
  script(src=fileName + '.js')

block variables
  -
    const fileName = 'financial-literacy-inner'
    const pageTitle ='Все о финансовой грамотности'

  -
    const financialLiteracyBanPopupData = {
      img: 'img/financial-literacy-ban-popup.png',
      h4: 'Если у вас вопрос по&nbsp;продуктам АТБ',
      p2: 'Воспользуйтесь разделом <a class="text-orange" href="#">«Служба заботы о&nbsp;клиентах»</a>, чтобы мы могли ответить вам персонально'
    }

block content
  main
    +banner('--m-vertically')
      +banner-item('--financial-literacy-inner, --v-inner-pt-xxl')
        +banner-wrapper('img/banner_financial-literacy-inner.png', true)
          +banner-h1('Плюсы и&nbsp;минусы <br> кредитных карт', '--mob-size-l')
    .page-content
      +section('--mt0')
        .inner
          +useful-articles-inner('', 'extended')
      +section
        .inner
          +section-head
            +ui-h2('Может быть интересно', 'section-head')
          +useful-articles('articlesFinancialOthers')
    +popup__wrapper('--size-l, --mob-px-xxxs')#popup-ask-question
      +section-head
        +section-box('--mob-popup-form')
          +ui-h2('Задать вопрос по&nbsp;финансовой ')
            span.text-nowrap грамотности
              +ui-tooltip(`Финансовый омбудсмен (уполномоченный) занимается досудебным урегулированием
                споров между потребителями финансовых услуг и&nbsp;финансовыми организациями`, '--in-ui-h2')
      | тут форма
      +section-box('--mt30')
        +section-box('--mob-popup-form')
          +financial-literacy-ban(financialLiteracyBanPopupData, '--ask-question')
