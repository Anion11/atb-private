extends ../../layouts/layout

block styles
  link(rel='stylesheet' href='../../styles/style.min.css')
  link(rel='stylesheet' href=fileName + '.min.css')

block scripts
  script(src='../../js/index.js')
  script(src=fileName + '.js')

block variables
  -const fileName = 'mortgage'
  -const pageTitle ='Приобретение готового жилья'

  -
    const tabsHeadItems =[
      { text: 'Процентная ставка' },
      { text: 'Требования к заемщикам' },
      { text: 'Условия предоставления кредита' },
      { text: 'Документы' },
    ]

  -
    const mortgageSliderItems =[
      {
        icon: 'img/mortgage_slider_netselevoy.svg',
        name: 'Нецелевой',
        feature: [
          { subtitle: 'Срок кредита ипотеки до', value: '20 лет' },
          { subtitle: 'Процентная ставка  от ', value: '26%' }
        ]
      },
      {
        icon: 'img/mortgage_slider_state_support.svg',
        name: 'Дальневосточная ипотека',
        feature: [
          { subtitle: 'Срок кредита ипотеки до', value: '20 лет' },
          { subtitle: 'Процентная ставка  от ', value: '0,1%' }
        ]
      },
      {
        icon: 'img/mortgage_slider_construction.svg',
        name: 'Приобретение квартиры на этапе строительства',
        feature: [
          { subtitle: 'Срок кредита ипотеки до', value: '30 лет' },
          { subtitle: 'Процентная ставка  от ', value: '21,5%' }
        ]
      },
      {
        icon: 'img/mortgage_slider_state_support.svg',
        name: 'Ипотека с&nbsp;гос.&nbspподдержкой',
        feature: [
          { subtitle: 'Срок кредита ипотеки до', value: '30 лет' },
          { subtitle: 'Процентная ставка  от ', value: '5,75%' }
        ]
      },
    ]

  -
    const list_1 =[
      { text: '<b>Квартира</b>: 21,5%;' },
      { text: '<b>Апартаменты</b>: 21,5%;' },
      { text: '<b>Жилой дом с зем.участком</b>: 22,5%;' },
      { text: '<b>Таунхаус</b>: 22,5%.' },
    ]

  -
    const list_2 =[
      { text: 'Для тех, кто работает по трудовому договору – от 3 месяцев на текущем месте работы.' },
      { text: 'Для тех, кто ведет предпринимательскую деятельность – один год в качестве ИП без убытков.' },
    ]

  -
    const list_3 =[
      { text: 'В обязательном порядке страхуются риски, связанные с утратой или повреждением недвижимости.' },
      { text: 'Также рекомендуется оформить страхование от утраты права собственности на недвижимость и личное страхование.' },
    ]

  -
    const list_4 =[
      { text: 'Личное страхование (страхование рисков, связанных с причинением вреда жизни и здоровью в результате несчастного случая или болезни)' },
    ]

block content
  main
    +breadcrumbs()
      +breadcrumbs-item('Главная', '/')
      +breadcrumbs-item('Кредиты', '#')
      +breadcrumbs-item('Ипотека', '#')
      +breadcrumbs-item('Калькулятор ипотеки', '#')
      +breadcrumbs-item('Приобретение готового жилья')
    +banner('--m-vertically')
      +banner-item('--finished-housing')
        +banner-wrapper('img/banner_finished_housing.png', true)
          +banner-h1('Приобретение <br class="banner__br-no-mob">готового жилья', '--mob-size-l')
          +banner-subtitle('Ставка от ')
            span.banner-subtitle__accent 12,9%
          +banner-foot
            +ui-button('оставить заявку', 'banner, --m-size-l')(href='#')
    .page-content
      +section('--mt0')
        .inner
          +mortgage-info('Приобретение квартиры в многоквартирном доме/ апартаментов/ жилого дома с&nbsp;земельным участком/ таунхауса путем заключения договора купли-продажи.<br>Теперь доступно приобретение недвижимости, находящейся в залоге другого банка.')
      +section()
        .inner
          +section-head
            +ui-h2('Рассчитайте свою ипотеку', 'section-head')
          +calc-mortgage
      +section
        .inner
          +info-partners
      +section
        +tabs-head(tabsHeadItems)
        +tabs-main
          +tabs-main__item(true)
            .inner
              +ui-p1
                p Базовая процентная ставка:
                +ui-ul(list_1)
          +tabs-main__item
            .inner
              +ui-p1
                p <b>Возраст:</b> от 21 до 75 лет (на дату погашения кредита)
                p <b>Стаж работы:</b>
                +ui-ul(list_2)
                p <b>Созаемщики:</b> вы можете выбрать в созаемщики не только мужа или жену (брак может быть незарегистрированным), но и близких родственников. Созаемщиками могут выступать максимум четыре человека по одному кредиту.
                p При использовании опции «Простая ипотека», требования к трудовому стажу/ к деятельности индивидуальных предпринимателей отсутствуют.
          +tabs-main__item
            .inner
              +ui-p1
                p <b>Срок кредита:</b> от <b>3</b> до <b>30</b> лет
                p <b>Сумма ипотечного кредита: </b>от 500 тыс. руб.
                  br
                  | Сумма кредита в зависимости от местонахождения предмета ипотеки не может превышать:
                  br
                  | для г. Москвы, Московской области: 30,00 млн. руб.
                  br
                  | для иных субъектов Российской Федерации: 15,00 млн. руб.
                  br
                p <b>Виды собственности и состав собственников: </b>вы можете оформить собственность на одного заемщика, общую совместную собственность на нескольких заемщиков, общую совместную собственность на заемщиков-супругов.
                p <b>Обеспечение по кредиту:</b> приобретаемое жилье находится в залоге по закладной.
                p <b>Страхование:</b>
                +ui-ul(list_3)
                p Предусмотрена надбавка в размере 2% в случае отказа Заемщика при заключении кредитного договора от дополнительных видов страхования, а также отсутствие продления договора страхования в течение срока действия кредитного договора, а также отсутствие продления/заключения нового договора страхования в течение 2-х календарных месяцев, со дня истечения срока действия полиса страхования:
                +ui-ul(list_4)
          +tabs-main__item
            .inner
              +documents

      +section
        .inner
          +section-head.text-center
            +ui-h2('Вопросы и ответы', 'section-head')
          +accordion
            +accordion-item('Как оформить ипотечный кредит?')
              +ui-p1('', '--light')
                p Предлагаем несколько удобных способов: через личный кабинет на сайте Банка, также можно позвонить в колл-центр по&nbsp;телефону
                  =' '
                  span.text-nowrap 8-800-775-88-88
                  |  (звонок по России бесплатный) или посетить ближайший офис банка.
            +accordion-item('Что нужно для оформления ипотеки?')
              +ui-p1('Анкета, паспорт, документы о&nbsp;трудоустройстве и доходе.', '--light')
            +accordion-item('Как узнать, сколько осталось выплатить по ипотеке?')
              +ui-p1('', '--light')
                p В мобильном приложении, через личный кабинет на сайте Банка, также можно позвонить в колл-центр по&nbsp;телефону
                  =' '
                  span.text-nowrap 8-800-775-88-88
                  |  (звонок по России бесплатный) или посетить ближайший офис банка.
            +accordion-item('Как использовать материнский капитал для выплаты ипотеки и&nbsp;какие есть ограничения?')
              +ui-p1('Обратиться в Банк для получения соответствующей справки для Пенсионного фонда и&nbsp;предоставить ее в&nbsp;ПФР. После перечисления материнского капитала вы можете выбрать, каким образом будет происходить погашение ипотеки: с&nbsp;уменьшением ежемесячного платежа или уменьшением срока кредитования. Ограничения могут устанавливаться Пенсионным фондом.', '--light')
            +accordion-item('Как частично/полностью погасить ипотеку досрочно?')
              +ui-p1('', '--light')
                p Обратиться в колл-центр по телефону 8-800-775-88-88 (звонок по России бесплатный) или посетить ближайший офис банка.
            +accordion-item('Какие объекты недвижимости можно приобрести за счет ипотечного кредита?')
              +ui-p1('В ипотеку можно приобрести квартиру, апартаменты, таунхаус, дом с&nbsp;земельным участком.', '--light')
            +accordion-item('Что делать, если я сейчас не могу выплачивать ипотечный кредит?')
              +ui-p1('Необходимо обратиться в ', '--light')
                a.text-orange(href='#') отделения АТБ
                |  с&nbsp;соответствующим заявлением. Возможна реструктуризация кредита.

            +accordion-item('Как внести платеж по ипотеке?')
              +ui-p1('', '--light')
                p Безналичным переводом в мобильном или интернет-банке с&nbsp;дебетовой карты, оформленной в Банке.
                p Безналичным переводом с&nbsp;любой карты на карту Банка.
                p Зачислением через банкомат Банка. Наличными в кассе любого
                  =' '
                  a.text-orange(href='#') отделения Банка
                  | .
            +accordion-item('Как долго вы рассматриваете заявку на кредит?')
              +ui-p1('Заявка рассматривается в&nbsp;течение двух рабочих дней.', '--light')
            +accordion-item('Можно ли изменить дату платежа?')
              +ui-p1('Да, обратившись в ', '--light')
                =' '
                a.text-orange(href='#') отделение банка
                |  с&nbsp;соответствующим заявлением.

      +section
        .inner
          +mortgage-slider(mortgageSliderItems)
    +seo('Готовые квартиры в ипотеку')
      p Хотите купить в ипотеку квартиру с отделкой и в благоустроенном районе? Ищете не просто подходящую, а выгодную программу кредитования? Азиатско-Тихоокеанский Банк предлагает Вам купить в ипотеку готовую квартиру с отделкой на привлекательных условиях, сразу заселиться в нее и оформить право собственности. Жилплощадь может относиться как ко вторичному рынку, в том числе иметь перепланировку, так и располагаться в сданном в эксплуатацию новом доме.
