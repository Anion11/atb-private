      { text: 'Процентная ставка' },
      { text: 'Требования к заемщикам' },
      { text: 'Условия предоставления кредита' },
      { text: 'Документы' },
    ]

  -
    const mortgageSliderItems =[
      {
        icon: 'img/mortgage_slider_r_h.svg',
        name: 'Приобретение готового жилья',
        feature: [
          { subtitle: 'Срок кредита ипотеки до', value: '30 лет' },
          { subtitle: 'Процентная ставка  от ', value: '21,5%' }
        ]
      },
      {
        icon: 'img/mortgage_slider_netselevoy.svg',
        name: 'Нецелевой',
        feature: [
          { subtitle: 'Срок кредита ипотеки до', value: '20 лет' },
          { subtitle: 'Процентная ставка  от ', value: '26%' }
        ]
      },
      {
        icon: 'img/mortgage_slider_state_support.svg',
        name: 'Дальневосточная ипотека',
        feature: [
          { subtitle: 'Срок кредита ипотеки до', value: '20 лет' },
