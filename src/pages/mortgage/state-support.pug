    ]

  -
    const list_3 =[
      { text: '3 млн. руб. в любом регионе РФ' },
    ]

  -
    const list_4 =[
      { text: 'не менее 15%;' },
      { text: 'не менее 15%, если при определении платежеспособности Заемщика учитывается доход только от предпринимательской деятельности и/или доход Заемщика-собственника бизнеса (полученный от этого бизнеса).' },
