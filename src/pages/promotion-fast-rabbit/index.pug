extends ../../layouts/layout

block styles
  link(rel='stylesheet' href='../../styles/style.min.css')
  link(rel='stylesheet' href=fileName + '.min.css')

block scripts
  script(src='../../js/index.js')

block variables
  -
    const fileName = 'promotion-fast-rabbit'
    const pageTitle ='Акция «Будь быстрее Кролика!»'

  -
    const smallBannerData ={
      h3: 'Поздравляем всех победителей акции!',
      h2Mods: ', --xl',
      descr: 'С&nbsp25 по 31&nbspмая 2023&nbsp;года были начислены призовые рубли всем участникам, выполнившим условия акции',
