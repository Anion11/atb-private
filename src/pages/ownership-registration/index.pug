extends ../../layouts/layout

block styles
  link(rel='stylesheet' href='../../styles/style.min.css')
  link(rel='stylesheet' href=fileName + '.min.css')

block scripts
  script(src='../../js/index.js')

block variables
  -
    const fileName = 'ownership-registration'
    const pageTitle = 'Оформление права собственности'

  -
    const transferInnerCallData ={
      title: 'Остались вопросы?',
      text: 'Звоните',
      phoneLink: '88007758888',
      phoneText: '8-800-775-88-88',
      img: 'img/transfer-inner-call.png',
    }

block content
  main
    +banner('--m-vertically')
      +banner-item('--v-inner-pt-xxl, --ownership-registration')
        +banner-wrapper('img/banner_ownership-registration.png', true)
          +banner-h1('Оформление права собственности', '--mob-size-l')
          .banner-item-foot
            .banner-item-foot-item
              +ui-button('Оформить', 'banner, --m-size-l')(href='#section-form')

    .page-content
      +section('--mt0')
        .inner
          +ownership-registration

      +section#section-form
        .inner
          +section-head.text-center
            +ui-h2('Оформить заявку')

      +section
        .inner
          +transfer-inner-call(transferInnerCallData)

      +section
        .inner
          +section-head
            +ui-h2('Полезные статьи об&nbsp;ипотеке')
          +useful-articles('articlesOthers')
