    const pageTitle ='Все о финансовой грамотности'

  -
    const tagsItems = [
      { text: 'Автострахование' },
      { text: 'Акции' },
      { text: 'Банки' },
      { text: 'Банковская карта' },
      { text: 'Безналичные платежи' },
      { text: 'Банковские услуги' },
      { text: 'Валюта' },
      { text: 'Вклады и счета' },
      { text: 'Кредиты' },
      { text: 'Кредитная история' },
      { text: 'Наличные' },
      { text: 'Займы' },
      { text: 'Инвестиции' },
      { text: 'Ипотека' },
      { text: 'Защитить права' },
      { text: 'Инфляция' },
      { text: 'Кредит на бизнес' },
      { text: 'Платежи и переводы' },
