  -
    const financialLiteracyBanData = {
      img: 'img/financial-literacy-ban.png',
      h4: 'Не нашли ответ на свой вопрос?',
      buttons: [
        { text: 'НАПИШИТЕ НАМ', mods: '--link-next', class: 'text-orange' },
      ]
    }

block content
  main
    +breadcrumbs
      +breadcrumbs-item('Главная', '/')
      +breadcrumbs-item('Всё о финансовой грамотности', '#')
      +breadcrumbs-item('Ответы на ваши вопросы')
    .page-content.page-content--pt-s
      +section('--mt0')
        .inner
          +section-box('--max-w-xs, --center')
            +fin-answers-expert(dataAnswersExpert, '--main')
          +section-box('--max-w-xs, --center')
            +search-form
          +section-box('--mt50')
            +tags(tagsItems, '', 'checkboxes')(data-mob-short)
          +section-box('--mt50')
            +useful-articles('fin-answersMain')
            +ui-pagination('--mt-xs')
      +section
        .inner
          +financial-literacy-ban(financialLiteracyBanData)
