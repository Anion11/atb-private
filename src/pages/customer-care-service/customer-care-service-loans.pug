extends ../../layouts/layout

block styles
  link(rel='stylesheet' href='../../styles/style.min.css')
  link(rel='stylesheet' href=fileName + '.min.css')

block scripts
  script(src='../../js/index.js')
  //- script(src=fileName + '.js')

block variables
  -
    const fileName = 'customer-care-service'
    const pageTitle ='Кредиты'

    const careInfoData = [
      {
        icon: 'img/care-info_call.svg',
        title: 'По&nbsp;телефону <span class="text-nowrap">8-800-775-88-88</span>',
        descr: 'Может потребоваться кодовое слово или&nbsp;T-пин',
      },
      {
        icon: 'img/care-info_chat.svg',
        title: 'В чате банка',
        descr: '<a href="#" class="text-orange">В Мобильном приложении</a> или&nbsp;<a href="#" class="text-orange text-nowrap">Интернет-банке</a>',
      },
      {
        icon: 'img/care-info_bank.svg',
        title: '<a href="#" class="text-orange">В отделениях банка</a>',
        descr: 'Возьмите с собой паспорт',
      }
    ]

block content
  main
    +breadcrumbs
      +breadcrumbs-item('Главная', '/')
      +breadcrumbs-item('Самое важное сегодня', '#')
      +breadcrumbs-item('Служба заботы о клиентах', '#')
      +breadcrumbs-item('Карты', '#')
      +breadcrumbs-item(pageTitle)
    .page-content
      +section('--mt0')
        .inner
          +care-inner('Кредиты', 'img/care-inner_loans.svg', 'loans', 'Кредиты наличными, автокредиты, ипотека')
      +section
        .inner
          +section-head
            +ui-h2('Вы можете получить информацию следующими способами', 'section-head')
          +care-info(careInfoData)
      +section
        .inner
          +ui-p1('Тут будет форма')
