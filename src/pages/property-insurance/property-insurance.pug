                    +ui-p1('', '--light')
                      +ui-ul(list_8)
                  +accordion-item('Риски', '--transparent-main')
                    +ui-h4('В части страхования имущества:', '--mb-xs, --bold, --mob-fz16')
                    +ui-p1('', '--light')
