          +banner-foot
            +ui-button('Подробнее', 'banner, --m-size-l')(href='#')

    .page-content
      +section('--mt0')
        .inner
          +main-attention({ title: '10 октября закрывается офис <span class="text-nowrap">в Санкт-Петербурге</span>', btn: 'Подробнее', btnLink: '#close-office', btnClass: 'js-popup-open' }, '--close-office')
