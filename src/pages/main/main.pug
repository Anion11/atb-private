      +section('--mt-xs')
        .inner
          +main-attention({ title: '<span class="text-orange">Внимание!</span> Клиентам Квантмобайл банка', btn: 'Подробнее' }, '--quant')
      +section
        .inner
          +switch('Подберите', 'кредит', 'ипотеку', 'main-calc', '--mb20, --main-calc')
          +switch-group('main-calc')
            +switch-content(true)
              +section-head
                .section-head__descr От низкой ставки к высоким целям
              +calc-credit('main', calcCreditData)
            +switch-content
              +tabs-head(calcTypeTabs, true, '--round')
              +tabs-main
                +tabs-main__item(true)
                  +calc-mortgage('dfo')
                +tabs-main__item
                  +calc-mortgage('complete')
                +tabs-main__item
                  +calc-mortgage('new_building')
      +section
        .inner
          +main-attention({ descr: 'Информация по текущей ситуации', btn: 'Подробнее' })
      +section
        .inner
          +mob-banner(mobBannersData)
      +section
        .inner
          +main-info
      +section
        .inner
          +section-head('--flex')
            +ui-h2('Новости')
            +ui-button('все новости', '--link-next')(href='#')
