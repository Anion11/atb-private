extends ../../layouts/layout

block styles
  link(rel='stylesheet' href='../../styles/style.min.css')

block scripts
  script(src='../../js/index.js')

block variables
  -const pageTitle ='ЛитРес'

block content
  main
    +breadcrumbs
      +breadcrumbs-item('Главная', '/')
      +breadcrumbs-item(pageTitle)
    +banner
      +banner-item('--text-old')
        +banner-wrapper('/img/banner_gradient.jpg')
          +banner-h1('Книга в&nbsp;подарок всем!')
          +banner-descr('Ура! Мы обновили список бесплатных книг!')
    .page-content
      +section('--mt0')
        .inner
          +info-block
            +info-block__line
              p Благодарим Вас за&nbsp;подтверждение email
              p Ваша ссылка
                =' '
                a.text-orange(href='#' target='_blank') на&nbsp;бесплатное скачивание

