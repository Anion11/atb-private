extends ../../layouts/layout

block styles
  link(rel='stylesheet' href='../../styles/style.min.css')
  link(rel='stylesheet' href=fileName + '.min.css')

block scripts
  script(src='../../js/index.js')
  script(src=fileName + '.js')

block variables
  -
    const fileName = 'promotion-cash-loan'
    const pageTitle ='Чудеса под Новый год'

    const greatPercentagesRaffleData = {
      title: '34&nbsp;приза по&nbsp;20&nbsp;230&nbsp;₽ (4&nbsp;победителя 1&nbsp;неделю и&nbsp;по&nbsp;5&nbsp;победителей каждую последующую)',
      titleMods: 'tt-no',
      date: [
        {
          dateTop: 'с 7 по 13 ноября',
          dateBot: 'до <b> <span class="great-percentages-raffle__txt great-percentages-raffle__txt--xl">19</span> ноября </b>',
        },
        {
          dateTop: 'с 14 по 20 ноября',
          dateBot: 'до <b> <span class="great-percentages-raffle__txt great-percentages-raffle__txt--xl">26</span> ноября </b>',
        },
        {
          dateTop: 'с 21 по 27 ноября',
          dateBot: 'до <b> <span class="great-percentages-raffle__txt great-percentages-raffle__txt--xl">3</span> декабря </b>',
        },
        {
          dateTop: 'с 28 ноября по 4 декабря',
          dateBot: 'до <b> <span class="great-percentages-raffle__txt great-percentages-raffle__txt--xl">10</span> декабря </b>',
        },
        {
          dateTop: 'с 5 по 11 декабря',
          dateBot: 'до <b> <span class="great-percentages-raffle__txt great-percentages-raffle__txt--xl">17</span> декабря </b>',
        },
        {
          dateTop: 'с 12 по 18 декабря',
          dateBot: 'до <b> <span class="great-percentages-raffle__txt great-percentages-raffle__txt--xl">24</span> декабря </b>',
        },
        {
          dateTop: 'с 19 по 25 декабря',
          dateBot: 'до <b> <span class="great-percentages-raffle__txt great-percentages-raffle__txt--xl">31</span> декабря </b>',
        },
      ],
      firstDate: 'с 7 по 13 ноября',
      winners: [
        {
          name: 'Тамара Киприянова А.',
          city: 'г. Чита',
        },
        {
          name: 'Екатерина Викторовна И.',
          city: 'г. Абакан',
        },
        {
          name: 'Сергей Сергеевич М.',
